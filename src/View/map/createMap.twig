{% extends 'layout/layout.twig' %}

{% block title %}Add a New Map{% endblock %}

{% block description %}{% endblock %}

{% block main %}
    <main class="align-center">
        <form class="form" method="post" action={{ url('map!create') }}>
            <input type="hidden" name="MAX_FILE_SIZE" value="10000000">
            <fieldset>
                <legend>
                    <i class="far fa-map fa-2x" aria-hidden="true"></i>
                </legend>
                <ul>
                    <li>
                        <label for="file">Picture</label>
                        <input name="file" type="file" accept=".jpg" required>
                    </li>
                    <li>
                        <label for="description">Description</label>
                        <textarea id="description" name="description" rows="3" maxlength="120" required placeholder="Map Description"></textarea>
                    </li>
                    <li>
                        <label for="atlas_id">Atlas Id</label>
                        <input id="atlas_id" name="atlas_id" type="number" max="255" required>
                    </li>

                </ul>
                <ul>
                    <li>
                        <input type="reset" value="Reset">
                        <input type="submit" value="Create">
                    </li>
                </ul>
            </fieldset>
        </form>
        <a class="btn-black btn-lg" href="{{ url('admin') }}">Quit</a>
    </main>
{% endblock %}

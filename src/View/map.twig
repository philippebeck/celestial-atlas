{% extends 'layout.twig' %}

{% block title %}{{ atlas.name }}{% endblock %}

{% block description %}Gallery of Celestial Maps from {{ atlas.author_name }} : {{ atlas.name }}{% endblock %}

{% block main %}
<main class="container-90sm-80lg">
    <ul class="grid-2sm-3lg-4wd" itemscope itemtype="https://schema.org/CreativeWork">
        {% for key, map in maps %}
        <li>
            <a href="img/atlas/{{ map.name}}.jpg" title="Clic to Watch" itemprop="image">
                <figure class="button-navy">
                    <img src="img/thumbnails/tn_{{ map.name }}.jpg" alt="{{ atlas.name }} board nÂ°{{ key + 1 }}" itemprop="thumbnailUrl">
                    <figcaption itemprop="description">{{ map.description }}</figcaption>
                </figure>
            </a>
        </li>
        {% endfor %}
    </ul>
</main>
{% endblock %}

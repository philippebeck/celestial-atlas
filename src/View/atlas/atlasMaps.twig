{% extends 'layout/layout.twig' %}

{% block title %}{{ atlas.name }}{% endblock %}

{% block description %}Gallery of Celestial Maps from {{ atlas.author_name }} : {{ atlas.name }}{% endblock %}

{% block main %}
<main class="container-90sm-80lg">
    {% if atlas.wiki %}
    <a class="button-green cursor-help"
       href="https://en.wikipedia.org/wiki/{{ atlas.wiki }}"
       title="Atlas's Wiki : {{ atlas.name }} made in {{ atlas.year }}"
       rel="noreferrer noopener" target="_blank">
        <i class="fas fa-atlas fa-lg" aria-hidden="true"></i>
        {{ atlas.name }}
    </a>
    {% endif %}

    {% if atlas.author_wiki %}
        <a class="button-purple cursor-help"
           href="https://en.wikipedia.org/wiki/{{ atlas.author_wiki }}"
           title="Author's Wiki : {{ atlas.author_name }}"
           rel="noreferrer noopener" target="_blank">
            <i class="far fa-user fa-lg" aria-hidden="true"></i>
            {{ atlas.author_name }}
        </a>
    {% endif %}

    <ul class="grid-2sm-3lg-4wd" itemscope itemtype="https://schema.org/CreativeWork">
        {% for key, map in maps %}
        <li>
            <a href="img/atlas/{{ map.name}}.jpg" title="Clic to Watch" itemprop="image">
                <figure class="button-navy">
                    <img src="img/thumbnails/tn_{{ map.name }}.jpg" alt="{{ atlas.name }} board nÂ°{{ key + 1 }}" itemprop="thumbnailUrl">
                    <figcaption itemprop="description">{{ map.description }}</figcaption>
                </figure>
            </a>
        </li>
        {% endfor %}
    </ul>
</main>
{% endblock %}
